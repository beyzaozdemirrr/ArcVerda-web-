<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - ArcVerda</title>

    <!-- CSS -->
    <link href="~/Content/AdminLayout/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/AdminLayout/css/layout/content.css" rel="stylesheet" />
    <link href="~/Content/AdminLayout/css/layout/sidebar.css" rel="stylesheet" />
    <link href="~/Content/AdminLayout/css/layout/topbar.css" rel="stylesheet" />
</head>
<body>
   
        <div class="container">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="brand">
                    <img src="/Content/AdminLayout/img/arc-verda-logo.png" alt="logo" class="logo">
                </div>
                <button class="close-btn">✖</button>
                <nav class="menu">
                    <div class="nav-item">
                        <a href="#" class="nav-link">
                            <span class="nav-icon">🏠</span> <span class="link-text">Dashboard</span>
                        </a>
                    </div>

                    <div class="nav-item has-submenu-inline">
                        <span class="nav-link">
                            <span class="nav-icon">📄</span> <span class="link-text">Pages</span>
                        </span>
                        <div class="submenu-inline">
                            <div class="submenu-section">
                                <h4>LOGIN SCREENS</h4>
                                <a href="~/Content/AdminLayout/login.html">Login</a>
                                <a href="~/Content/AdminLayout/register.html">Register</a>
                            </div>
                            <div class="submenu-section">
                                <h4>OTHER PAGES</h4>
                                <a href="~/Content/AdminLayout/404.html">404 Page</a>
                            </div>
                        </div>
                    </div>

                    <div class="nav-item">
                        <a href="#" class="nav-link">
                            <span class="nav-icon">📊</span> <span class="link-text">Charts</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="#" class="nav-link">
                            <span class="nav-icon">📋</span> <span class="link-text">Tables</span>
                        </a>
                    </div>
                </nav>
            </aside>

            <!-- Main Content -->
            <main class="main">
                <header class="topbar">
                    <button class="menu-toggle-btn">☰</button>
                    <input type="text" placeholder="Ara..." data-placeholder="Ara...">
                    <button class="search-btn">Ara</button>

                    <div class="right-actions">
                        <button class="create-btn">Oluştur</button>
                        <span class="user-icon">👤</span>
                    </div>
                </header>

                @RenderBody()

                <footer class="footer">
                    © 2025 Copyright
                </footer>
            </main>

        </div>
   

                


            

  

    <!-- JS -->
    <script src="~/Content/AdminLayout/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/AdminLayout/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/AdminLayout/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Content/AdminLayout/js/sb-admin-2.min.js"></script>
    <script src="~/Content/AdminLayout/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Content/AdminLayout/js/demo/chart-area-demo.js"></script>
    <script src="~/Content/AdminLayout/js/demo/chart-pie-demo.js"></script>
</body>
</html>